#!/usr/bin/env ruby

# hub(1)

class Hub
  PRIVATE = 'git@github.com:%s/%s.git'
  PUBLIC  = 'git://github.com/%s/%s.git'
  USER    = `git config --global github.user`.chomp
  REPO    = `basename $(pwd)`.chomp
  VERSION = '0.1.0'

  attr_reader :args
  def initialize(*args)
    @args = args

    if @args.empty?
      @args[0] = 'help'
    elsif respond_to?(@args[0])
      send(@args[0])
    end
  end

  def clone
    ssh = @args.delete('-p')
    @args.each_with_index do |arg, i|
      if arg.scan('/').size == 1 && !arg.include?(':')
        url = ssh ? PRIVATE : PUBLIC
        @args[i] = url % arg.split('/')
      end
    end
  end

  def remote
    if @args[1] == 'add'
      if @args.delete('-g')
        ssh  = @args.delete('-p')
        user = @args.last
        url  = ssh ? PRIVATE : PUBLIC
        @args << url % [ user, REPO ]
      end
    end
  end

  def init
    if @args.delete('-g')
      url = PRIVATE % [ USER, REPO ]
      after "git remote add origin #{url}"
    end
  end

  def version
    after do
      puts "hub version %s" % VERSION
    end
  end
  alias_method "--version", :version

  def command
    "git #{@args.join(' ')}"
  end

  def after(command = nil, &block)
    @after ||= block ? block : command
  end

  def execute
    if @after
      execute_with_after_callback
    else
      exec "git", *@args
    end
  end

  def execute_with_after_callback
    if system("git", *@args)
      @after.respond_to?(:call) ? @after.call : exec(@after)
      exit
    else
      exit 1
    end
  end
end

if $0 == __FILE__
  Hub.new(*ARGV).execute
end
